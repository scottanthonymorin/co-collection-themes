{
  "name": "@giving-tuesday/co-collection-themes",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "version": "0.3.7",
  "author": "",
  "license": "ISC",
  "description": "Reusable React component + theme library for the co-embed app.",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20",
    "react-icons": ">=4.0.0",
    "react-router-dom": ">=6.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && rollup -c",
    "build:watch": "rollup -c -w",
    "prepare": "npm run build",
    "lint": "eslint \"src/**/*.{js,jsx}\"",
    "lint:fix": "eslint \"src/**/*.{js,jsx}\" --fix",
    "format": "prettier --write .",
    "release:patch": "npm version patch && npm publish --access public",
    "release:minor": "npm version minor && npm publish --access public",
    "release:major": "npm version major && npm publish --access public",
    "storybook": "storybook dev -p 6006",
    "build:stories": "storybook build"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.25.8",
    "@babel/preset-react": "^7.25.7",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@storybook/addon-essentials": "^8.2.0",
    "@storybook/addon-interactions": "^8.2.0",
    "@storybook/addon-links": "^8.2.0",
    "@storybook/react": "^8.2.0",
    "@storybook/react-vite": "^8.2.0",
    "@storybook/testing-library": "^0.2.2",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "postcss": "^8.4.47",
    "postcss-modules": "^6.0.0",
    "prettier": "^3.3.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rollup": "^4.46.2",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "^8.2.0",
    "vite": "^5.3.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "prop-types": "^15.8.1",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5"
  }
}
